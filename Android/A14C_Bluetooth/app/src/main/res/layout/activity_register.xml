<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="30dp"
        tools:context=".RegisterActivity">

    <ImageView
            android:layout_width="58dp"
            android:layout_height="55.71dp" app:srcCompat="@drawable/register_activity_small_login"
            android:id="@+id/register_go_to_login_btn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            />
    <ImageView
            android:layout_width="91.43dp"
            android:layout_height="20.67dp" app:srcCompat="@drawable/pablo_logo"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="153.14dp" />
    <TextView
            android:text="환영합니다!"
            android:layout_width="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="22.85sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="184dp"/>
    <TextView
            android:text="회원가입을 위해 아래 정보를 입력해주세요."
            android:textColor="#8B8B8B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:fontFamily="@font/noto_sans"
            android:textSize="12.85sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="224dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="49.71dp" app:srcCompat="@drawable/login_activity_register_finish_green"
            android:id="@+id/register_finish_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="620dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/register_activity_pwd"
            android:id="@+id/imageView21"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="440dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/register_activity_emai"
            android:id="@+id/imageView19"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="376dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/register_activity_pwd_chk"
            android:id="@+id/imageView22"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="510dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/register_activity_name"
            android:id="@+id/imageView20"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="316dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginStart="35dp"
            android:ems="10"
            android:textColor="#8B8B8B"
            android:id="@+id/register_edt_name"
            android:singleLine="false"
            android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="344dp" app:layout_constraintHorizontal_bias="0.594"/>
    <EditText
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginStart="35dp"
            android:id="@+id/register_edt_email"
            android:textColor="#8B8B8B"
            android:singleLine="false"
            android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="408dp" app:layout_constraintHorizontal_bias="0.552"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#8B8B8B"
            android:id="@+id/register_edt_pwd"
            android:layout_marginStart="35dp"
            android:singleLine="false"
            android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="472dp" app:layout_constraintHorizontal_bias="0.599"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#8B8B8B"
            android:id="@+id/register_edt_pwd_chk"
            android:singleLine="false"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="544dp" app:layout_constraintHorizontal_bias="0.599"/>
    <TextView
            android:text="중복확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B8B8B"
            android:fontFamily="@font/noto_sans"
            android:textSize="12.85sp"
            android:id="@+id/tvEmailChk"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="408dp"
            android:layout_marginStart="180dp"
            app:layout_constraintHorizontal_bias="0.884"/>
</androidx.constraintlayout.widget.ConstraintLayout>